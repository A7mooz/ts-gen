{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "noEmit": true,
        "baseUrl": "src",
        "paths": {
            "#lib": ["lib/index.js"],
            "#lib/*": ["lib/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}
