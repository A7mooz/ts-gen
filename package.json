{
    "name": "@a7mooz/ts-gen",
    "version": "1.3.2",
    "description": "Typescript/JavaScript project generator",
    "scripts": {
        "build": "tsup",
        "test": "vitest --run",
        "test:watch": "vitest",
        "build-fast": "tsup --no-dts",
        "lint": "eslint src/**/*.ts --fix",
        "pretty": "prettier -w .",
        "fmt": "pnpm pretty && pnpm lint",
        "dev": "pnpm build-fast --silent && ./dist/bin.mjs",
        "dev:win": "pnpm build-fast --silent && node --enable-source-maps dist/bin.mjs",
        "prepare": "husky install"
    },
    "bin": {
        "ts-gen": "dist/bin.mjs"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
    },
    "directories": {
        "lib": "src",
        "test": "test"
    },
    "files": [
        "dist",
        "template/**/*"
    ],
    "keywords": [
        "typescript",
        "javascript",
        "ts",
        "js",
        "cli"
    ],
    "author": "A7mooz",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/A7mooz/ts-gen.git"
    },
    "bugs": {
        "url": "https://github.com/A7mooz/ts-gen/issues"
    },
    "homepage": "https://github.com/A7mooz/ts-gen#readme",
    "dependencies": {
        "@clack/prompts": "^0.7.0",
        "colorette": "^2.0.20",
        "execa": "^8.0.1",
        "gradient-string": "^2.0.2",
        "merge": "^2.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.1.0",
        "@commitlint/config-conventional": "^18.1.0",
        "@types/gradient-string": "^1.1.4",
        "@types/node": "^20.8.9",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "case": "^1.6.3",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "prettier": "^3.0.3",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2",
        "vitest": "^0.34.6"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "pnpm@8.9.2"
}
